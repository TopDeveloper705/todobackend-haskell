category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

executable todobackend-scotty
  main-is:             Main.hs
  ghc-options:         -Wall
  -- other-modules:       
  -- other-extensions:    
  build-depends:         base >=4.6 && <4.9
                       , http-types
                       , scotty
                       , path-pieces
                       , persistent-sqlite
                       , todobackend-common
                       , transformers

  hs-source-dirs:      src
  default-language:    Haskell2010